<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="net.yuzumone.statepatternpractice.MainActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        >

        <Button
            android:id="@+id/button_guarantee_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/guarantee_bandwidth_modification_request"
            />

        <Button
            android:id="@+id/button_report_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bandwidth_usage_report_request"
            />

        <Button
            android:id="@+id/button_report_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bandwidth_usage_report_reply"
            />

        <Button
            android:id="@+id/button_guarantee_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/guarantee_bandwidth_modification_reply"
            />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</layout>